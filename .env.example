# =========================================
# PTD Elite Dashboard - Environment Variables
# =========================================
# Copy this file to .env.local and fill in your values
# For Vercel deployment, set these in the Vercel Dashboard > Settings > Environment Variables

# =========================================
# FRONTEND (VITE) - Exposed to browser
# =========================================
# All VITE_ prefixed variables are exposed to the frontend

# Gemini API Key for AI features
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Base URL (leave as /api for Vercel deployment)
VITE_API_BASE_URL=/api

# Firebase Configuration (optional, for legacy features)
VITE_FIREBASE_PROJECT_ID=ptd-fitness-demo
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=ptd-fitness-demo.firebaseapp.com
VITE_FIREBASE_STORAGE_BUCKET=ptd-fitness-demo.appspot.com

# =========================================
# BACKEND (PYTHON) - Server-side only
# =========================================

# Google Cloud Project for Vertex AI / BigQuery
GOOGLE_CLOUD_PROJECT=ptd-fitness-demo
GOOGLE_CLOUD_LOCATION=us-central1

# Google API Key (used by backend, same as frontend key)
GOOGLE_API_KEY=your_gemini_api_key_here

# Anthropic Claude API (optional, for multi-model support)
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI GPT API (optional, for multi-model support)
OPENAI_API_KEY=your_openai_key_here

# Google Drive Integration (for automation)
RAW_FOLDER_ID=your_google_drive_raw_folder_id
DONE_FOLDER_ID=your_google_drive_done_folder_id

# =========================================
# PRODUCTION URLs
# =========================================
# These are used for Railway/External backend deployment

# Railway Backend URL (if using Railway for Python backend)
RAILWAY_BACKEND_URL=https://your-railway-backend.up.railway.app

# Vercel Frontend URL
VERCEL_URL=https://ptd-elite-dashboard.vercel.app
